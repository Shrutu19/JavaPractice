class Main{

    public static void pattern(int n)
    {
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n-i-1;j++)  //For Space = n-i-1
            {
                System.out.print(" ");
            }
            for(int j=0;j<2*i+1;j++)  //For Stars = 2i+1
            {
                System.out.print("*");
            }
            for(int j=0;j<n-i-1;j++)  //For Space = n-i-1
            {
                System.out.print(" ");
            }
        System.out.println();    
        }
    }
    public static void main(String args[])
    {
       pattern(6);
    }
}

