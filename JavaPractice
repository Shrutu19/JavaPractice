import java.util.Scanner;
public class Main{
    public static void main(String[] args) {

        // Scanner sc = new Scanner(System.in);
        // int n = sc.nextInt();
        // System.out.println("Enter n: ");
        int space = 2*(6-1); //here n =6
        for(int i =1; i<6; i++)  //here n =6
        {
          for(int j=1;j<=i;j++)
          {
            System.out.print(j);
          }

          for(int j=i;j<=space;j++)
          {
            System.out.print(" ");
          }


          for(int j=i;j>=1;j--)
          {
            System.out.print(j);

          }
        System.out.println();
        space = space - 2;
        }

    }
}


